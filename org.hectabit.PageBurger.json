{
  "id": "org.hectabit.PageBurger",
  "runtime": "org.gnome.Platform",
  "runtime-version": "45",
  "sdk": "org.gnome.Sdk",
  "command": "pageburger",
  "finish-args": [
    "--share=network",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=ipc",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "PageBurger",
      "buildsystem": "simple",
      "build-commands": [
        "make install DESTDIR=/app/bin/ SHAREDIR=/app/share/"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://centrifuge.hectabit.org/HectaBit/PageBurger-App.git",
          "tag": "1.0-1",
          "commit": "6d4b56af1f54f5c3fa686dddfc0431d6ffb2aecb"
        }
      ]
    }
  ]
}
